{
  "openapi": "3.0.3",
  "info": {
    "title": "PROCESS Domain Open API Schema",
    "contact": {
      "email": "timothy.galvin@atos.net"
    },
    "version": "0.3.4"
  },
  "paths": {},
  "components": {
    "schemas": {
      "recipe": {
        "type": "object",
        "title": "Recipe",
        "required": [
          "receipeId",
          "productId"
        ],
        "properties": {
          "receipeId": {
            "type": "integer",
            "format": "int32",
            "title": "receipe id"
          },
          "productId": {
            "type": "integer",
            "format": "int32",
            "title": "product id",
            "description": "The product id of the Recipe is the unique identifier of the specific Product  that will result from following this Recipe. \n\n(Note: Product is part of the PRODUCT domain, which is to be defined as of v0.3.3 of this model)"
          },
          "recipeVersion": {
            "type": "integer",
            "format": "int32",
            "title": "recipe version",
            "description": "This is the version of the recipe.  In SCADA this is a single integer that increments with each revision."
          },
          "recipeTitle": {
            "type": "string",
            "title": "recipe title"
          },
          "recipeCode": {
            "type": "integer",
            "format": "int32",
            "title": "recipe code"
          }
        },
        "nullable": false
      },
      "processEvent": {
        "type": "object",
        "title": "Process Event",
        "required": [
          "processEventId",
          "processEventStatus"
        ],
        "properties": {
          "processEventId": {
            "type": "integer",
            "format": "int32",
            "title": "process event id"
          },
          "processEventTypeId": {
            "type": "integer",
            "format": "int32",
            "title": "process event type id"
          },
          "recipeId": {
            "type": "integer",
            "format": "int32",
            "title": "recipe id"
          },
          "processEventStatus": {
            "type": "string",
            "title": "process event status",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "processEventTimestamp": {
            "type": "string",
            "format": "date-time",
            "title": "process event timestamp"
          }
        },
        "nullable": false
      },
      "processResponse": {
        "type": "object",
        "title": "Process Response",
        "required": [
          "processEventId"
        ],
        "properties": {
          "processResponseId": {
            "type": "integer",
            "format": "int32",
            "title": "process response id"
          },
          "processEventId": {
            "type": "integer",
            "format": "int32",
            "title": "process event id"
          },
          "eventAcknowledgedByPersonId": {
            "type": "integer",
            "format": "int32",
            "title": "event acknowledged by person id",
            "description": "The event acknowledge by person id is the unique identifier of the person who has acknowledged this Process Event."
          },
          "eventAcknowledgedTimestamp": {
            "type": "string",
            "format": "date-time",
            "title": "event acknowledged timestamp"
          }
        },
        "nullable": false
      },
      "manufacturingProcessPerson": {
        "type": "object",
        "title": "Manufacturing Process Person",
        "required": [
          "manufacturingProcessPersonId"
        ],
        "properties": {
          "manufacturingProcessPersonId": {
            "type": "integer",
            "format": "int32",
            "title": "manufacturing process person id"
          },
          "manufacturingProcessPersonName": {
            "type": "string",
            "title": "manufacturing process person name",
            "description": "This is the version of the recipe.  In SCADA this is a single integer that increments with each revision."
          },
          "manufacturingProcessPersonRole": {
            "type": "string",
            "title": "manufacturing process person role"
          }
        },
        "nullable": false
      },
      "deviationRule": {
        "type": "object",
        "title": "Deviation Rule",
        "required": [
          "deviationRuleId",
          "processEventTypeId"
        ],
        "properties": {
          "deviationRuleId": {
            "type": "integer",
            "format": "int32",
            "title": "deviation rule id"
          },
          "processEventTypeId": {
            "type": "integer",
            "format": "int32",
            "title": "process event type id"
          },
          "deviationRuleSummary": {
            "type": "string",
            "title": "deviation rule summary"
          }
        },
        "nullable": false
      },
      "deviation": {
        "type": "object",
        "title": "Deviation",
        "required": [
          "deviationId",
          "processEventId",
          "deviationSeverity",
          "productBatchId"
        ],
        "properties": {
          "deviationId": {
            "type": "integer",
            "format": "int32",
            "title": "deviation id",
            "example": 10123
          },
          "deviationRuleId": {
            "type": "integer",
            "format": "int32",
            "title": "deviation rule id",
            "example": 1234
          },
          "processEventId": {
            "type": "integer",
            "format": "int32",
            "title": "process event id",
            "example": 99999999
          },
          "deviationHeadline": {
            "type": "string",
            "title": "deviation headline",
            "example": "Air Pressure Low PS1035"
          },
          "deviationSeverity": {
            "type": "string",
            "title": "deviation severity",
            "enum": [
              "CRITICAL",
              "MAJOR",
              "MINOR"
            ],
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
            "example": "MAJOR"
          },
          "productBatchId": {
            "type": "integer",
            "format": "int32",
            "title": "product batch id",
            "example": 12345678
          }
        },
        "nullable": false
      },
      "processEventType": {
        "type": "object",
        "title": "Process Event Type",
        "required": [
          "processEventTypeId",
          "processEventTypeName"
        ],
        "properties": {
          "processEventTypeId": {
            "type": "integer",
            "format": "int32",
            "title": "process event type id"
          },
          "processEventTypeName": {
            "type": "string",
            "title": "process event type name",
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
          },
          "processEventTypeDescription": {
            "type": "string",
            "title": "process event type description"
          }
        },
        "nullable": false
      },
      "deviationAssessment": {
        "type": "object",
        "title": "deviation Assessment",
        "required": [
          "deviationId",
          "deviationAssessmentOutcome",
          "deviationAssessedById"
        ],
        "properties": {
          "deviationId": {
            "type": "integer",
            "format": "int32",
            "title": "deviation id",
            "example": 10123
          },
          "deviationAssessmentSummary": {
            "type": "string",
            "title": "deviation assessment summary"
          },
          "deviationAssessmentOutcome": {
            "type": "string",
            "title": "deviation assessment outcome",
            "enum": [
              "PASS",
              "FAIL"
            ],
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
            "example": "PASS"
          },
          "deviationAssessedById": {
            "type": "integer",
            "format": "int32",
            "title": "deviation assessed by id",
            "example": 4567890
          }
        },
        "nullable": false
      },
      "productionRun": {
        "type": "object",
        "title": "Production Run",
        "required": [
          "productionRunId",
          "productBatchId",
          "recipeId",
          "productionRunStartDate-time"
        ],
        "properties": {
          "productionRunId": {
            "type": "integer",
            "format": "int32",
            "title": "production run id"
          },
          "productBatchId": {
            "type": "integer",
            "format": "int32",
            "title": "product batch id"
          },
          "recipeId": {
            "type": "integer",
            "format": "int32",
            "title": "recipe id"
          },
          "productionRunCode": {
            "type": "integer",
            "format": "int32",
            "title": "production run code"
          },
          "productionRunStartDate-time": {
            "type": "string",
            "format": "date-time",
            "title": "production run start date-time",
            "description": "This is the version of the recipe.  In SCADA this is a single integer that increments with each revision."
          },
          "productionRunEndDate-time": {
            "type": "string",
            "format": "date-time",
            "title": "production run end date-time",
            "description": "This is the version of the recipe.  In SCADA this is a single integer that increments with each revision."
          }
        },
        "nullable": false
      },
      "productBatch": {
        "type": "object",
        "title": "Product Batch",
        "required": [
          "productBatchId"
        ],
        "properties": {
          "productBatchId": {
            "type": "integer",
            "format": "int32",
            "title": "product batch id"
          },
          "productBatchWorkOrderId": {
            "type": "integer",
            "format": "int32",
            "title": "product batch work order id"
          },
          "productBatchDate-time": {
            "type": "string",
            "format": "date-time",
            "title": "product batch date-time",
            "description": "This is the version of the recipe.  In SCADA this is a single integer that increments with each revision."
          },
          "productBatchNumber": {
            "type": "string",
            "title": "product batch number",
            "description": "This is the version of the recipe.  In SCADA this is a single integer that increments with each revision."
          }
        },
        "nullable": false
      }
    }
  }
}
