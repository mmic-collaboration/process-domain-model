{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Deviation",
    "properties": {
        "deviation id": {
            "type": "integer",
            "isActivated": true,
            "tPrecision": 9,
            "index": true,
            "primaryKey": true,
            "mode": "int32",
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "examples": [
                10123
            ]
        },
        "product batch id": {
            "type": "integer",
            "isActivated": true,
            "tPrecision": 9,
            "index": true,
            "mode": "int32",
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "alternateKey": false,
            "examples": [
                12345678
            ]
        },
        "batch release condition id": {
            "type": "integer",
            "isActivated": true,
            "tPrecision": 9,
            "index": true,
            "mode": "int32",
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "alternateKey": false,
            "examples": [
                4567890
            ]
        },
        "deviation rule id": {
            "type": "integer",
            "isActivated": true,
            "tPrecision": 9,
            "index": true,
            "mode": "int32",
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "examples": [
                1234
            ]
        },
        "process event id": {
            "type": "integer",
            "isActivated": true,
            "tPrecision": 9,
            "index": true,
            "mode": "int32",
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "examples": [
                99999999
            ]
        },
        "deviation headline": {
            "type": "string",
            "isActivated": true,
            "autoincrement": {
                "step_num": 1
            },
            "tPrecision": 9,
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "examples": [
                "Air Pressure Low PS1035"
            ]
        },
        "deviation severity": {
            "type": "string",
            "isActivated": true,
            "autoincrement": {
                "step_num": 1
            },
            "tPrecision": 9,
            "pattern": "^[A-Za-z_][A-Za-z0-9_]*$",
            "symbols": [
                "Y"
            ],
            "compositePrimaryKey": false,
            "compositeUniqueKey": false,
            "enum": [
                "CRITICAL",
                "MAJOR",
                "MINOR"
            ],
            "examples": [
                "MAJOR"
            ]
        }
    },
    "isActivated": true,
    "additionalProperties": false,
    "required": [
        "deviation id",
        "product batch id",
        "batch release condition id",
        "process event id",
        "deviation severity"
    ]
}